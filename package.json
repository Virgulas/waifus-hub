{
  "name": "waifus-hub",
  "version": "1.0.0",
  "description": "A desktop bot manager built with Electron",
  "main": "main.js",
  "author": "virgulas",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "discord.js": "^14.15.3",
    "@google/genai": "^x.x.x",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "icons/icon",
        "asar": false
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32",
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": []
    }
  }
}
